# GitHub Actions CI/CD Pipeline for {{ name }}
# Generated by GoRepos

name: CI/CD

on:
  push:
    branches: [ {{ branch | default('main') }} {% if branch != 'main' and branch != 'master' %}, main{% endif %} ]
  pull_request:
    branches: [ {{ branch | default('main') }} ]

jobs:
{% if 'golang' in tags or 'go' in tags %}
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        go-version: [1.19, 1.20, 1.21]

    steps:
    - uses: actions/checkout@v4

    - name: Set up Go
      uses: actions/setup-go@v4
      with:
        go-version: ${{ matrix.go-version }}

    - name: Cache Go modules
      uses: actions/cache@v3
      with:
        path: ~/go/pkg/mod
        key: ${{ runner.os }}-go-${{ hashFiles('**/go.sum') }}
        restore-keys: |
          ${{ runner.os }}-go-

    - name: Download dependencies
      run: go mod download

    - name: Run tests
      run: {% if commands.test %}{{ commands.test }}{% else %}go test -v ./...{% endif %}

    - name: Run linter
      uses: golangci/golangci-lint-action@v3
      with:
        version: latest

  build:
    needs: test
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Set up Go
      uses: actions/setup-go@v4
      with:
        go-version: 1.21

    - name: Build
      run: {% if commands.build %}{{ commands.build }}{% else %}go build -v ./...{% endif %}
{% endif %}

{% if 'nodejs' in tags or 'npm' in tags or 'react' in tags %}
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [16, 18, 20]

    steps:
    - uses: actions/checkout@v4

    - name: Use Node.js ${{ matrix.node-version }}
      uses: actions/setup-node@v4
      with:
        node-version: ${{ matrix.node-version }}
        cache: 'npm'

    - name: Install dependencies
      run: npm ci

    - name: Run tests
      run: {% if commands.test %}{{ commands.test }}{% else %}npm test{% endif %}

    - name: Run linter
      run: {% if commands.lint %}{{ commands.lint }}{% else %}npm run lint{% endif %}

  build:
    needs: test
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Use Node.js
      uses: actions/setup-node@v4
      with:
        node-version: 20
        cache: 'npm'

    - name: Install dependencies
      run: npm ci

    - name: Build
      run: {% if commands.build %}{{ commands.build }}{% else %}npm run build{% endif %}
{% endif %}

{% if 'terraform' in tags %}
  terraform:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Setup Terraform
      uses: hashicorp/setup-terraform@v2
      with:
        terraform_version: 1.5.0

    - name: Terraform Init
      run: terraform init

    - name: Terraform Validate
      run: {% if commands.validate %}{{ commands.validate }}{% else %}terraform validate{% endif %}

    - name: Terraform Plan
      run: {% if commands.plan %}{{ commands.plan }}{% else %}terraform plan{% endif %}
      env:
        TF_VAR_environment: ${{ github.ref == 'refs/heads/main' && 'production' || 'staging' }}
{% endif %}

{% if 'critical' in tags %}
  security:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4

    - name: Run security scan
      uses: securecodewarrior/github-action-add-sarif@v1
      with:
        sarif-file: security-scan-results.sarif
{% endif %}